<!-- en la linea 7 en el ref se pone el nombre del modelo en el que se va a poner la plantilla -->
<!-- en la linea 10,11 y en las lineas del html que contengan "${}" se ponen los campos correspondientes -->

<?xml version="1.0"?>
<odoo>
  <data noupdate="0">
    <record id="cambio_estado" model="mail.template">
      <field name="name">Notificación de Cambio de Estado</field>
      <field name="model_id" ref="model_support_incident"/>
      <field name="subject">Incidencia ${object.name} ha cambiado de estado</field>
      <field name="email_to">${object.assigned_to.email}</field>
      <field name="body_html" type="html">
        <![CDATA[
        <p>Hola ${object.assigned_to.name},</p>
        <p>La incidencia <strong>${object.name}</strong> ha cambiado su estado a <strong>${object.state}</strong>.</p>
        <p>Descripción: ${object.description}</p>
        ]]>
      </field>
    </record>
  </data>
</odoo>
