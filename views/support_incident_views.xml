<xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="support_incident_view_form" model="ir.ui.view">
        <field name="name">support.incident.form</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <form string="Incidencias">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="deadline"/>
                    </group>
                    <group>
                        <field name="category_id"/>
                        <field name="priority"/>
                    </group>
                    <group>
                        <field name="state" widget="statusbar" statusbar_visible="Ingresado, En Proceso, Resuelto"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="support_incident_view_list" model="ir.ui.view">
        <field name="name">support.incident.view.list</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <list string="Incidencias">
                <field name="name"/>
                <field name="category_id"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="deadline"/>
            </list>
        </field>
    </record>

    <record id="support_incident_view_kanban" model="ir.ui.view">
        <field name="name">support.incident.view.kanban</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <kanban >
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box"> <!--Es un estilo predefinido para las tarjetas-->
                        <div class="oe_kanban_global_click"> <!--Permite que se pueda clickear la tarjeta-->
                            <div class="o_kanban_record_top">  
                                <strong t-field="record.name"/> <!--Los datos que van a salir arriba de la carpeta -->
                            </div>
                            <div class="o_kanban_badges">
                                <span class"badge"
                                    t-att-class="'badgge ' +
                                                (record.state.raw_value == 'Ingresado' and 'badge-primary' or
                                                (record.state.raw_value == 'En Proceso' and 'badge-warning' or
                                                'badge-success))">  
                                    <t t-esc="record.state.value"/> <!--Toma el estilo del span, dependiendo de el estado en el que este la tarea-->
                                </span>
                                <span class"badge"
                                    t-att-class="'badgge ' +
                                                (record.priority.raw_value == 'Baja' and 'badge-secondary' or
                                                (record.priority.raw_value == 'Medio' and 'badge-warning' or
                                                'badge-danger))">  
                                    <t t-esc="record.priority.value"/> <!--Toma el estilo del span, dependiendo de la prioridad-->
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="menu_support_incident_root" name="Incidencias" sequence="10"/>
    <menuitem id="menu_support_incident" name="Incidencias" parent="menu_support_incident_root" sequence="10"/>

    <record id="action_support_incident" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">support.incident</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="support_incident_view_kanban"/>
    </record>

    <menuitem id="menu_support_incident_action" parent="menu_support_incident" action="action_support_incident"/>

</odoo>
