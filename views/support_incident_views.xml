<odoo>
    <record id="support_incident_view_form" model="ir.ui.view">
        <field name="name">support.incident.form</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <form string="Incidencias">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="deadline"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="category"/>
                        <field name="priority"/>
                    </group>
                    <group>
                        <field name="state" widget="statusbar" statusbar_visible="Ingresado, En Proceso, Resuelto"/>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="deadline"/>
                    </group>
                    <button string="Cambiar Estado"
                            type="object"
                            name="cambiar_estado"
                            class="btn-primary"/>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <!-- <field name="activity_ids" widget="mail_activity"/>-->
                <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="support_incident_view_list" model="ir.ui.view">
        <field name="name">support.incident.view.list</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <list string="Incidencias">
                <field name="name"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="deadline"/>
            </list>
        </field>
    </record>
    <record id="support_incident_view_kanban" model="ir.ui.view">
        <field name="name">support.incident.view.kanban</field>
        <field name="model">support.incident</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong><t t-esc="record.name"/></strong>
                            </div>
                            <div class="o_kanban_badges">
                            <!-- Badge de estado -->
                                <span class="badge"
                                t-attf-class="badge #{ 
                                    record.state.raw_value == 'Ingresado' 
                                        ? 'badge-primary' 
                                        : (record.state.raw_value == 'En Proceso' 
                                            ? 'badge-warning' 
                                            : 'badge-success') 
                                    }">
                                    <t t-esc="record.state"/>
                                </span>

                            <!-- Badge de prioridad -->
                                <span class="badge"
                                t-attf-class="badge #{ 
                                    record.priority.raw_value == 'Baja' 
                                        ? 'badge-secondary' 
                                        : (record.priority.raw_value == 'Medio' 
                                            ? 'badge-warning' 
                                            : 'badge-danger') 
                                }">
                                    <t t-esc="record.priority"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <menuitem id="menu_support_incident_root" name="Incidencias" sequence="10"/>
    <menuitem id="menu_support_incident" name="Incidencias" parent="menu_support_incident_root" sequence="10"/>
    <record id="action_support_incident" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">support.incident</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="support_incident_view_kanban"/>
    </record>
    <menuitem id="menu_support_incident_action" parent="menu_support_incident" action="action_support_incident"/>
</odoo>
